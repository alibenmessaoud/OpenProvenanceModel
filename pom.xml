<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.pasoa</groupId>
  <artifactId>opm</artifactId>
  <name>OPM</name>
  <version>1.0-SNAPSHOT</version>
  <url>https://provenance.ecs.soton.ac.uk/pasoa/${site.location}/common-pstructure</url>
  <packaging>jar</packaging>
  <description>Java Objects representing the OPM model and an XML serialiser/deserialiser for them. Classers are  generated by JAXB from the OPM schema.</description>


  <scm>
    <connection>scm:svn:https://provenance.ecs.soton.ac.uk/contrib-svn/trunk/opm</connection>
    <developerConnection>scm:svn:https://provenance.ecs.soton.ac.uk/contrib-svn/trunk/opm</developerConnection>
  </scm>   

  <developers>
      <developer>
         <id>Luc</id>
         <name>Luc Moreau</name>
         <email>l.moreau@ecs.soton.ac.uk</email>
         <roles>
            <role>Developer</role>
         </roles>
         <organization>University of Southampton</organization>
         <timezone>0</timezone>
       </developer>         
   </developers>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.2</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>javax.xml.bind</groupId>
      <artifactId>jaxb-api</artifactId>
      <version>2.1</version>
    </dependency>

    <dependency>
     <groupId>com.sun.xml.bind</groupId>
     <artifactId>jaxb-impl</artifactId>
     <version>2.1.3</version>
    </dependency>

    <dependency>
      <groupId>org.jvnet.jaxb2_commons</groupId>
	  <artifactId>runtime</artifactId>
   	  <version>0.2.RC1</version>
    </dependency>




    <dependency>
      <groupId>commons-jxpath</groupId>
      <artifactId>commons-jxpath</artifactId>
      <version>1.2</version>
       <exclusions>  <!-- block maven transitive dependency on this old
                          version of xerces, which  is used by commons-jxpath-1.2 -->
		<exclusion>
			<groupId>xerces</groupId>
			<artifactId>xerces</artifactId>
		</exclusion>
 	   </exclusions>
    </dependency>




 </dependencies>

  <build>



     <plugins>

      <plugin>
        <groupId>org.jvnet.jaxb2.maven2</groupId>
	    <artifactId>maven-jaxb2-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <id>go1</id>
              <goal>generate</goal>
            </goals>
            <configuration>
<!--               <generatePackage>org.pasoa.common.pstructure2</generatePackage>  -->
               <schemaDirectory>src/main/resources</schemaDirectory>
               <plugins>
			     <plugin>
				   <groupId>org.jvnet.hyperjaxb3</groupId>
				   <artifactId>hyperjaxb3-ejb-plugin</artifactId>
				   <version>0.2.RC1</version>
			     </plugin>
		       </plugins>

               <schemaIncludes>
                 <schemaInclude>**/opm.1_01.xsd</schemaInclude>
               </schemaIncludes>
               <bindingDirectory>src/main/resources</bindingDirectory>
               <bindingIncludes>
                  <bindingInclude>bindings.xjb</bindingInclude>
               </bindingIncludes> 
               <schemaExcludes>
                 <schemaExclude>**/docstyle/*.xsd</schemaExclude>
<!--                  <schemaExclude>**/XPathPQuery.xsd</schemaExclude>  conflicting with ProvenanceQuery, becauseof repeat of namespacemapping -->
               </schemaExcludes>
               <strict>true</strict> 
               <verbose>true</verbose>     
               <extension>true</extension>     
               <args>
                 <arg>-npa</arg>
			     <arg>-Xequals</arg>
  			     <arg>-XhashCode</arg>
			     <arg>-XtoString</arg>
 			     <!-- <arg>-Xhyperjaxb3-ejb</arg>
			          <arg>-Xhyperjaxb3-ejb-roundtripTestClassName=RoundtripTest</arg> -->
               </args>
            </configuration>
          </execution>
        </executions>
      </plugin>


    </plugins>

   <pluginManagement>
    <plugins>
     <plugin>
      <groupId>org.apache.maven.plugins</groupId>
      <artifactId>maven-compiler-plugin</artifactId>
      <configuration>
       <source>1.5</source>
       <target>1.5</target>
      </configuration>
    </plugin>


    <plugin>

         <groupId>org.jvnet.jaxb2.maven2</groupId>
	     <artifactId>maven-jaxb2-plugin</artifactId>
         <version>0.4.M1</version>

    </plugin>


   </plugins>
   </pluginManagement>

    <testResources>
       <testResource>
         <directory>src/test/resources</directory>
         <filtering>true</filtering>
       </testResource>
    </testResources>

  </build>

</project>
